@model Web.Models.RegisterViewModel
@{
    ViewBag.Title = "S’inscrire";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-sm-12">
                <h2><a href="@Url.Action("Index", "Home")" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a>User Add</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="icon-home"></i></a></li>
                    <li class="breadcrumb-item">User</li>
                    <li class="breadcrumb-item active">Add</li>
                </ul>
            </div>

        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card">

                <div class="body">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-auth-small", role = "form" , enctype = "multipart/form-data" }   ))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>First Name</label>
                            @Html.TextBoxFor(m => m.firstname, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            @Html.TextBoxFor(m => m.lastname, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="form-group">

                            <div class="form-group">
                                <label>Password Confirmation</label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>Phone Number</label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Role</label>
                            <br />
                            <label class="fancy-radio">
                                <input type="radio" name="role" value="Team Leader" required>
                                <span><i></i>Team Leader</span>
                            </label>
                            <label class="fancy-radio">
                                <input type="radio" name="role" value="Team Member">
                                <span><i></i>Team Member</span>
                            </label>
                            <label class="fancy-radio">
                                <input type="radio" name="role" value="Admin" required>
                                <span><i></i>Admin</span>
                            </label>
                            <p id="error-radio"></p>
                        </div>
                                <div class="form-group">
                                <div class="col-md-10">
                                    <input type ="file" name="img" id="Path" />
                                </div>
                            </div>

                        <br>
                        <button type="submit" class="btn btn-primary">Add</button>
                    }
                </div>
            </div>
        </div>


    </div>
</div>
